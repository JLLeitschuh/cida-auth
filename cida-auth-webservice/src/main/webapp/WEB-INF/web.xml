<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<description>CIDA Auth Webervices</description>
	<display-name>CIDA Auth Webervices</display-name>
	
	<servlet>
		<servlet-name>AuthenticationServicesEntryPoint</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>gov.usgs.cida.auth.webservice.authentication.AuthenticationServicesEntryPoint</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthenticationServicesEntryPoint</servlet-name>
		<url-pattern>/auth/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>TokenServicesEntryPoint</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>gov.usgs.cida.auth.webservice.token.TokenServicesEntryPoint</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>TokenServicesEntryPoint</servlet-name>
		<url-pattern>/token/*</url-pattern>
	</servlet-mapping>
</web-app>
